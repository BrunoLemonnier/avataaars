{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "esModuleInterop": true
  },
  "types": ["jest", "node"],
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}
